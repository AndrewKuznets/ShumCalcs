<Window x:Class="ShumCalcs.WinNewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShumCalcs"
        mc:Ignorable="d"
         Title="Добавить новый проект" Height="300" Width="700"  ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="lblNewProj" Content="Номер проекта" HorizontalAlignment="Left" Margin="46,79,0,0" VerticalAlignment="Top" Width="134" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnSave" Content="Принять" HorizontalAlignment="Left" Margin="405,210,0,0" VerticalAlignment="Top" Width="99" Height="34" FontSize="14" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Покинуть" HorizontalAlignment="Left" Margin="542,211,0,0" VerticalAlignment="Top" Width="108" Height="34" FontSize="14" Click="btnCancel_Click"/>
        <TextBox x:Name="txtProjName" HorizontalAlignment="Left" Height="35" Margin="200,80,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="385" FontSize="14"/>

    </Grid>
</Window>
